@model IEnumerable<FlightBooking.Models.Airport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Airports" asp-action="Index" method="get">
    <p>
        <select name="searchOption">
            <option value="Name">Name</option>
            <option value="IATA">IATA</option>
            <option value="ICAO">ICAO</option>
            <option value="City">City</option>
        </select>
         <input type="text" name="SearchString"/>
        <input type="submit" value="Filter" />
    </p>
</form>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-indigo-100 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th scope="col" class="px-6 py-3">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">@Html.DisplayNameFor(model => model.name)</a>
                </th>
                <th scope="col" class="px-6 py-3">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">@Html.DisplayNameFor(model => model.iata)</a>
                </th>
                <th scope="col" class="px-6 py-3">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]"> @Html.DisplayNameFor(model => model.icao)</a>  
                </th>
                <th scope="col" class="px-6 py-3">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]"> @Html.DisplayNameFor(model => model.city)</a>
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(model => model.lat)
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(model => model.lon)
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(model => model.country)
                </th>
                <th scope="col" class="px-6 py-3">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    
                    <td class="px-6 py-4">
                        @item.Id
                    </td>
                    <td class="px-6 py-4">
                        @item.name
                    </td>
                    <td class="px-6 py-4">
                        @item.iata
                    </td>
                    <td class="px-6 py-4">
                        @item.icao
                    </td>
                    <td class="px-6 py-4">
                        @item.city
                    </td>
                    <td class="px-6 py-4">
                        @item.lat
                    </td>
                    <td class="px-6 py-4">
                        @item.lon
                    </td>
                    <td class="px-6 py-4">
                        @item.country
                    </td>
                    <td class="px-6 py-4">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_PagedList"/>

