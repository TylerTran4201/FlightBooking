@model FlightBooking.Models.AppUser

@{
    ViewData["Title"] = "Details";
}
<div class="bg-white/50 w-1/3 mx-auto py-5 shadow-xl rounded">
    <div class="flex flex-col items-center justify-center px-2">
        <p class="font-bold text-xl text-gray-800">Create new User</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="UserName" class="text-sm font-medium leading-none text-gray-800">
                </label>
                <input asp-for="UserName"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    autocomplete="username" aria-required="true" />
                <span asp-for="UserName" class="text-danger"></span>
            </div>
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="Email" class="text-sm font-medium leading-none text-gray-800">
                </label>
                <input asp-for="Email"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    aria-required="true" />
                <span asp-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="FirstName" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="FirstName"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    autocomplete="username" aria-required="true" />
                <span asp-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="LastName" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="LastName"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    autocomplete="username" aria-required="true" />
                <span asp-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="Gender" class="text-sm font-medium leading-none text-gray-800"></label>
                <div class="bg-white rounded mt-2">
                    <select data-te-select-init class asp-for="Gender" aria-required="true">
                        <option class="bg-white" value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="PhoneNumber" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="PhoneNumber"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    aria-required="true" />
                <span asp-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="City" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="City"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    aria-required="true" />
                <span asp-for="City" class="text-danger"></span>
            </div>
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="Country" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="Country"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    aria-required="true" />
                <span asp-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="DateOfBirth" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="DateOfBirth"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2" />
                <span asp-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="mr-1 col-span-2 sm:col-span-1">
            </div>
        </div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id"
                class="cursor-pointer bg-indigo-500 text-gray-200 py-1 w-full rounded text-center">Edit</a>
            <a asp-action="Index"
                class="bg-white/70 text-indigo-500 border-indigo-500 rounded py-1 w-full text-center">Back to List</a>
        </div>
    </div>
</div>