@model FlightBooking.Models.Airline

@{
    ViewData["Title"] = "Edit";
}
<div class="bg-white/50 w-1/3 mx-auto py-5 shadow-xl rounded">
    <div class="flex flex-col items-center justify-center px-2">
        <p class="font-bold text-xl text-gray-800">Edit airline</p>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-5 w-full">
                <label asp-for="Name" class="text-sm font-medium leading-none text-gray-800"></label>
                <input asp-for="Name"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-5 w-full grid grid-cols-2 gap-2">
                <div class="mr-1 col-span-2 sm:col-span-1">
                    <label asp-for="AirlineComanyId" class="text-sm font-medium leading-none text-gray-800"></label>
                    <select asp-for="AirlineComanyId" asp-items="ViewBag.AirlineComanyId"
                        class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"></select>
                </div>
                <div class="mr-1 col-span-2 sm:col-span-1">
                    <label asp-for="BasePrice" class="text-sm font-medium leading-none text-gray-800"></label>
                    <input asp-for="BasePrice"
                        class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2" />
                    <span asp-validation-for="BasePrice"></span>
                </div>
            </div>
            <div class="mt-5 w-full grid grid-cols-2 gap-2">
                <div class="mr-1 col-span-2 sm:col-span-1">
                    <input type="submit" value="Edit" class="bg-indigo-500 text-gray-200 py-1 w-full rounded">
                </div>
                <div class="mr-1 col-span-2 sm:col-span-1">
                    <button class="bg-white/70 text-indigo-500 border-indigo-500 rounded py-1 w-full">
                        <a asp-action="Index">Back to List</a>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
