@model FlightBooking.Models.Airline

@{
    ViewData["Title"] = "Details";
}

<div class="bg-white/50 w-1/3 mx-auto py-5 shadow-xl rounded">
    <div class="flex flex-col items-center justify-center px-2">
        <p class="font-bold text-xl text-gray-800">Detail Schedule</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="Name" class="text-sm font-medium leading-none text-gray-800">
                </label>
                <input asp-for="Name"
                    class="bg-gray-100/70 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    autocomplete="username" aria-required="true" disabled />
                <span asp-for="UserName" class="text-danger"></span>
            </div>
            <div class="mr-1 col-span-2 sm:col-span-1">
                <label asp-for="AirlineCompany" class="text-sm font-medium leading-none text-gray-800">
                </label>
                <input asp-for="AirlineCompany.Name"
                    class="bg-gray-100/70 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    autocomplete="username" aria-required="true" disabled />
                <span asp-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-5 w-full grid grid-cols-2 gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id"
                class="cursor-pointer bg-indigo-500 text-gray-200 py-1 w-full rounded text-center">Edit</a>
            <a asp-action="Index"
                class="bg-white/70 text-indigo-500 border-indigo-500 rounded py-1 w-full text-center">Back to List</a>
        </div>
    </div>
</div>

