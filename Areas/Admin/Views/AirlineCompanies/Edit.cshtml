@model FlightBooking.Models.AirlineCompany

@{
    ViewData["Title"] = "Edit";
}

<div class="bg-white/50 w-1/3 mx-auto py-5 shadow-xl rounded">
    <div class="flex flex-col items-center justify-center px-2">
        <p class="font-bold text-xl text-gray-800">Edit airline company</p>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-5 w-full">
                <div class="mt-5 w-full grid grid-cols-2 gap-2">
                    <label asp-for="Name" class="text-sm font-medium leading-none text-gray-800 mr-1 col-span-2 sm:col-span-1">
                    </label>
                    <div class="h-[30px] w-[30px] rounded-full border shadow-md mr-1 col-span-2 sm:col-span-1">
                        <img src="@ViewBag.Icon"
                            class="h-full w-full rounded-full" alt="" />
                    </div>                    
                </div>
                <input asp-for="Name"
                    class="bg-gray-100 border rounded text-xs font-medium leading-none text-gray-800 py-2 w-full pl-3 mt-2"
                    autocomplete="Name" aria-required="true" />
                <span asp-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-5 w-full grid grid-cols-2 gap-2">
                <div class="mr-1 col-span-2 sm:col-span-1">
                    <button type="submit" class="bg-indigo-500 text-gray-200 py-1 w-full rounded">Create</button>
                </div>
                <div class="mr-1 col-span-2 sm:col-span-1">
                    <button class="bg-white/70 text-indigo-500 border-indigo-500 rounded py-1 w-full">
                        <a asp-action="Index">Back to List</a>
                    </button>
                    
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
