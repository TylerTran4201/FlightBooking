        <div class="w-full flex items-center justify-between py-5">
              <hr class="w-full bg-gray-400">
              <p class="text-base font-medium leading-4 px-2.5 text-gray-400">OR</p>
              <hr class="w-full bg-gray-400  ">
            </div>
            <form id="account" method="post">
              <div>
                  <label class="text-sm font-medium leading-none text-gray-800">
                      UserName
                  </label>
                  <input asp-for="LoginDto.Username" class="bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2" autocomplete="username" aria-required="true" />
                  <span asp-validation-for="LoginDto.Username" class="text-danger"></span>                  
              </div>
              <div class="mt-6  w-full">
                  <label for="pass" class="text-sm font-medium leading-none text-gray-800">
                      Password
                  </label>
                  <input asp-for="LoginDto.Password" class="bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"
                    autocomplete="current-password"
                    aria-required="true" />
                  <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
              </div>
              <div class="mt-8">
                  <button role="button" class="focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 text-sm font-semibold leading-none text-white focus:outline-none bg-indigo-700 border rounded hover:bg-indigo-600 py-4 w-full">Sign in</button>
              </div>
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
    </div>
</div>
</div>




