<div class="w-full px-6 lg:px-8">
     <div class="mx-auto w-2/3 lg:text-center mb-2">
        <div class="w-full grid grid-cols-3 bg-indigo-900/70 text-gray-200">
            <div class="flex p-2 justify-items-center items-center">
                <div class="mx-auto">
                    <div class="text-xl font-bold flex items-center"><span class="material-symbols-outlined"> flight_takeoff </span> <p>@ViewBag.Schedule.DepartureAirport.iata</p></div>
                    <p class="text-sm">@ViewBag.Schedule.DepartureAirport.city , @ViewBag.Schedule.DepartureAirport.country</p>                    
                </div>
                <span class="material-symbols-outlined mx-auto"> arrow_forward </span>
                <div class="mx-auto">
                    <div class="text-xl font-bold flex items-center"><span class="material-symbols-outlined"> flight_land </span><p>@ViewBag.Schedule.DestinationAirport.iata</p></div>
                    <p class="text-sm">@ViewBag.Schedule.DepartureAirport.city , @ViewBag.Schedule.DepartureAirport.country</p>                    
                </div>
            </div>
            <div class="p-2">
                <p>@ViewBag.DepartureTime</p>
                <p>Departing</p>
            </div>
            <div class="p-2">
                <p>@ViewBag.DestinationTime</p>
                <p>Arriving</p>                
            </div>
        </div>
        <div class="mt-3 mx-auto">
            <div class="bg-red-200 rounded shadow-md mb-2 p-4">
                 <p id="selectedSeatsInfo" class="font-bold"></p>

                 <a id="finishButton"
                    class="text-white bg-fuchsia-600 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-1.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
                    style="display: none;">Payment</a>
            </div>
            <div class="head bg-indigo-900/70 w-3/12 mx-auto p-3">
                <div class="head1 bg-white/70 rounded-b-md w-full mx-auto">
                </div>
            </div>
            <div class="bg-indigo-900/70 w-3/12 mx-auto pb-3 pr-3 pl-3 rounded-b-md">
                <div class="bg-white/70 rounded-b-md w-full mx-auto p-3">
                    <div class="bg-white rounded grid grid-cols-5 gap-2 p-2 mb-3">
                        @for(int i = 0; i < ViewBag.BusinessSeats.Length; i+=4){
                            @for(int j =i; j < i + 4; j ++){
                                @if(@ViewBag.BusinessSeats[j].Status == 0){
                                    <button onclick="toggleSeat(this,'@ViewBag.BusinessSeats[j].Name', 'Business', @ViewBag.Schedule.Id)"
                                            class="bg-green-500 rounded w-full h-16 hover:bg-green-800"></button>
                                }else{
                                    <button class="bg-gray-500 rounded w-full h-16 hover:bg-gray-800"></button>                                    
                                }

                                @if(j % 2 != 0 && j != i+4-1){
                                    <div class="w-full h-16 flex items-center justify-center"><p class="text-gray-800 font-semibold text-lg">@((i+4)/4)</p></div>
                                }
                            }
                        }
                    </div>
                    <div class="bg-white rounded grid grid-cols-5 gap-2 p-2">
                        @for(int i = 0; i < ViewBag.EconomySeats.Length; i+=4){
                            @for(int j =i; j < i + 4; j ++){
                                @if(@ViewBag.EconomySeats[j].Status == 0){
                                    <button onclick="toggleSeat(this,'@ViewBag.EconomySeats[j].Name', 'Economy', @ViewBag.Schedule.Id)"
                                            class="bg-indigo-500 rounded w-full h-16 hover:bg-indigo-800"></button>
                                }else{
                                    <button class="bg-gray-500 rounded w-full h-16 hover:bg-gray-800"></button>
                                }
                                @if(j % 2 != 0 && j != i+4-1){
                                    <div class="w-full h-16 flex items-center justify-center"><p class="text-gray-800 font-semibold text-lg">@((i+4)/4)</p></div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
     </div>
</div>

<script src="~/js/HandleSelectSeat.js"></script>

<style>
    .head{
        height: 200px;
        border-radius: 28% 28% 10% 10% / 100% 100% 0% 0%;
    }
    .head1{
        margin-top: 20px;
        height: 177px;
        border-radius: 30% 30% 10% 10% / 100% 100% 0% 0%;
    }
</style>