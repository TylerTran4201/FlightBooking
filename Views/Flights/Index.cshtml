@model FlightBooking.Controllers.FlightsController

@{
    ViewData["Title"] = "Flights";
}

<style>
    .background {
        background-image: url('/Assets/worldmap.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
<div class="mx-auto w-full px-6 lg:px-8">
    <div class="mx-auto w-2/3 lg:text-center background bg-white/70 shadow-lg p-2 rounded-xl">
        <h2
            class="p-4 text-2xl leading-7 font-semibold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-pink-600 to-violet-600">
            It's more than, just a flight booking</h2>
        <p class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl">Everything about booking tickets is here
        <form asp-controller="Flights" asp-action="SearchFlight">
            <div class="grid md:grid-cols-3 grid-cols-1 gap-4 bg-gray-500/35 rounded p-4">
                <div class="p-1">
                    <div class="bg-white/70 rounded">
                        <select data-te-select-init data-te-select-filter="true" asp-for="SearchFlightDto.Departure">
                                @foreach (var item in ViewBag.Airports)
                                {
                                <option value="@item.Id">@item.name</option>
                                }
                        </select>
                    </div>
                </div>
                <div class="p-1">
                    <div class="bg-white/70 rounded">
                        <select data-te-select-init data-te-select-filter="true" asp-for="SearchFlightDto.Destination">
                                @foreach (var item in ViewBag.Airports)
                                {
                                <option value="@item.Id">@item.name</option>
                                }
                        </select>
                    </div>
                </div>
                <div class="p-1">
                    <div class="bg-white/70 rounded">
                        <input
                            class="py-1 bg-transparent text-gray-800 border-2 rounded w-full border-gray-200 border-solid"
                            type="date" asp-for="SearchFlightDto.FlightDate">
                    </div>
                </div>
                <div class="p-1">
                    <input type="text" placeholder="tickets"
                        class="bg-white/70 focus:outline-none w-full border-solid border-2 rounded py-1 px-1"
                        asp-for="SearchFlightDto.NumOfTickets">
                </div>
                <div class="p-1">
                    <button type="submit"
                        class="text-white bg-fuchsia-600 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-1.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Find</button>
                </div>
            </div>
        </form>
    </div>
</div>